<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.3/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    </head>
<body>
    <div class="container">
        <div class="row">
            <form   action="/post-user" method="POST">
                <div class="form-row">
                    <div class="col-12 mt-5">Create a new user</div>

                    <div class="form-group col-md-6">
                        <label for="inputFullname">Fullname</label>
                        <input type="text" class="form-control" name="fullname" placeholder="Vũ Minh Phương">
                      </div>
                  <div class="form-group col-md-6">
                    <label for="inputEmail4">Email</label>
                    <input type="email" class="form-control" name="email" placeholder="Email">
                  </div>
                  <div class="form-group col-md-6">
                    <label for="inputPassword4">Password</label>
                    <input type="password" class="form-control" name="password" placeholder="Password">
                  </div>
                </div>
                <div class="form-group">
                  <label for="inputAddress">Address</label>
                  <input type="text" class="form-control" name="address" placeholder="1234 Main St">
                </div>
                <div class="form-group">
                  <label for="inputPhoneNumber">Phone Number</label>
                  <input type="text" class="form-control" name="phone_number" placeholder="">
                </div>
                <div class="form-row">
                  <div class="form-group col-md-4">
                    <label for="inputState">Role</label>
                    <select name="role_id" class="form-control">
                      <option value="1">Admin</option>
                      <option value="2">consumers</option>
                    </select>
                  </div>
                </div>
                <button type="submit" class="btn btn-primary">Sign in</button>
              </form>
        </div>
    </div>
</body>
</html>